{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2019"
    ],
    "types": [
      "node",
      "@types/mocha"
    ],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./package/dist",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/declarations"
    ],
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    "test",
    "package"
  ],
  "ts-node": {
    "files": true
  }
}
